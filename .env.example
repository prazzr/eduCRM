# Environment Configuration
# Copy this file to .env and update values for your environment

# Database
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=edu_crm

# Application
APP_URL=http://localhost/CRM/
APP_ENV=development
APP_DEBUG=true

# Security
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRY=86400

# File Uploads
UPLOAD_DIR=secure_uploads/
MAX_UPLOAD_SIZE=10485760

# Email (SMTP)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME=eduCRM

# Messaging Gateways
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

WHATSAPP_API_KEY=
WHATSAPP_PHONE_ID=

# ntfy Push Notifications (Self-Hosted)
# See docs/ntfy-setup.md for installation guide
NTFY_URL=http://localhost:8090
NTFY_ACCESS_TOKEN=
NTFY_TOPIC_PREFIX=educrm
